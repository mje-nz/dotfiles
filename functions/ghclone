DEFAULT_USER="mje-nz"

print_usage () {
  echo "Usage: ghclone [-h] [<username>/]<repo> [<dir>]\n"
  echo "    -h    Use HTTPS instead of SSH"
  exit 1
}

# Process flags
USE_HTTPS=false
while getopts "h" flag; do
  case "$flag" in
    h) USE_HTTPS=true;;
    *) print_usage ;;
  esac
done
shift $((OPTIND-1))

# Process username/repo argument
if [[ -z $1 ]]; then
  print_usage
fi
if [[ $1 == */* ]]; then
  # Not sure if repo names with slashes are valid, but some people seem to think so
  USER=${1%%/*}  # Keep up to first slash
  REPO=${1#*/} # Keep from first slash
else
  USER=$DEFAULT_USER
  REPO=$1
fi

# Process folder argument
if [[ -n $2 ]]; then
  FOLDER=$2
else
  FOLDER=$REPO
fi

# Clone and change directory
if $USE_HTTPS; then
  URL="https://github.com/$USER/$REPO.git"
else
  URL="git@github.com:$USER/$REPO.git"
fi
echo "git clone ${URL} ${FOLDER}"
git clone ${URL} ${FOLDER}
cd ${FOLDER}
